{
    "compilerOptions": {
        "target": "ES6",         // Specify ECMAScript target version
        "module": "CommonJS",     // Use CommonJS for Node.js modules
        "outDir": "out",          // Output directory for compiled files
        "sourceMap": true,
        "lib": ["ES6", "DOM"],    // Include ES6 and DOM types (if needed for browser code)
        "types": ["node"]         // Ensure TypeScript includes Node.js types
    }
}
